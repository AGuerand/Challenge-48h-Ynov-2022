{% extends 'base.html.twig' %}

{% block title %}Hello EventController!
{% endblock %}

{% block body %}

	<div style="display: flex; flex-wrap: wrap; margin-left: 50px; margin-right: 50px; margin-top: 50px; margin-bottom: 50px;">
		{% for event in events %}

			<!-- Card loop -->
			<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.14.0/css/all.min.css" integrity="sha512-1PKOgIY59xJ8Co8+NE6FZ+LOAZKjy+KY8iq0G4B3CyeY6wYHN3yt9PW0XpSriVlkMXe40PTKnXrLnZ9+fkDaog==" crossorigin="anonymous"/>

			<a href="{{ path('app_event_detail', {'id': event.id} ) }}" class="container">
				<div class="img-container">
					<img src=" {{ event.image }} " alt="Image des events" style="width: 100%; height: 100%;">
				</div>
				<div class="container__info">
					<h2 style="">
						<span>{{ event.nom }}</span>
					</h2>
					<span>
						<i class="fas fa-eye"></i>
						{{ event.attendant }}</span>
					<span>
						<i class="fas fa-comment-alt"></i>624</span>
				</div>
				<div class="container__profile">
					<div class="container__profile__text">
						<h2><b>{{ event.getUserId.username }}</b></h2>
						<h2>{{ event.date|date('d/m/Y Ã  H:i:s') }} </h2>
					</div>
				</div>
			</a>

			{# <a href="{{ path('app_event_detail', {'id': event.id} ) }}">more</a> #}
			{#{{ event.nom }} event name
			        {{ event.date|date('d/m/Y Ã  H:i:s') }}
			        {{ event.contenu }}
			        {{ event.getUserId.username }} username
			        {{ event.attendant }}
			        
			        <img src=" {{ event.image }} " alt="Image des events">
			        {{ event.id }}#}
		{% endfor %}
	</div>
{% endblock %}
